{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.bar.json",
  "monitor": 0,
  "font_family": "JetBrains Mono",
  "height": 38,
  "transparency_alpha": 0,
  "theme": {
    "palette": "Base16",
    "name": "Sandcastle",
    "accent": "Base05"
  },
  "center_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false,
          "display": "AllIconsAndText"
        },
        "Time": {
        "enable": true,
        "format": "TwentyFourHour"
        }
      }
    }
  ],
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": false,
          "hide_empty_workspaces": false,
          "display": "AllIconsAndText"
        },
        "layout": {
          "enable": true,
          "display": "IconAndText"
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "grouping": {
    "kind": "Widget",
    "rounding": 15,
    "style": "DefaultWithShadowB0O1S3",
    "transparency_alpha": 255
  },
  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": true,
        "label_prefix":"Icon"
      }
    },
    {
      "Cpu": {
        "enable": true,
        "label_prefix":"Icon"
      }
    },
    {
      "Network": {
        "enable": false,
        "show_total_data_transmitted": true,
        "show_network_activity": true
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHour"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
